@{
}
@model Guarderia.Models.MovimientoServicio
@{
    ViewData["Title"] = "Detalles del Movimiento";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID Movimiento:</dt>
                <dd class="col-sm-9">@Model.IdMovimiento</dd>

                <dt class="col-sm-3">Fecha y Hora:</dt>
                <dd class="col-sm-9">@Model.FechaMovimiento.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Servicio:</dt>
                <dd class="col-sm-9">@Model.Servicio?.NombreServicio</dd>

                <dt class="col-sm-3">Mascota:</dt>
                <dd class="col-sm-9">@Model.Mascota?.Nombre (@Model.Mascota?.Raza)</dd>

                <dt class="col-sm-3">Cliente:</dt>
                <dd class="col-sm-9">@Model.Mascota?.Cliente?.Nombre @Model.Mascota?.Cliente?.Apellido</dd>

                <dt class="col-sm-3">Cuidador Asignado:</dt>
                <dd class="col-sm-9">
                    @if (Model.Cuidador != null)
                    {
                        <div class="d-flex align-items-center">
                            <span class="badge bg-primary me-2">
                                <i class="bi bi-person-badge"></i> @Model.Cuidador.Nombre @Model.Cuidador.Apellido
                            </span>
                            @if (Model.Cuidador.Especialidad != null)
                            {
                                <small class="text-muted">(@Model.Cuidador.Especialidad)</small>
                            }
                        </div>
                        <small class="text-muted">
                            <i class="bi bi-envelope"></i> @Model.Cuidador.Email |
                            <i class="bi bi-telephone"></i> @Model.Cuidador.Telefono
                        </small>
                    }
                    else
                    {
                        <span class="text-muted">Sin cuidador asignado</span>
                    }
                </dd>

                <dt class="col-sm-3">Tipo de Movimiento:</dt>
                <dd class="col-sm-9">
                    @if (Model.TipoMovimiento == "Entrada")
                    {
                        <span class="badge bg-success">Entrada</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Salida</span>
                    }
                </dd>

                <dt class="col-sm-3">Cantidad:</dt>
                <dd class="col-sm-9">@Model.Cantidad</dd>

                <dt class="col-sm-3">Estado del Servicio:</dt>
                <dd class="col-sm-9">
                    @switch (Model.EstadoServicio)
                    {
                        case "Pendiente":
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-clock"></i> Pendiente
                            </span>
                            break;
                        case "En Proceso":
                            <span class="badge bg-info">
                                <i class="bi bi-hourglass-split"></i> En Proceso
                            </span>
                            break;
                        case "Completado":
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Completado
                            </span>
                            break;
                    }
                </dd>

                @if (Model.FechaCompletado.HasValue)
                {
                    <dt class="col-sm-3">Fecha de Completado:</dt>
                    <dd class="col-sm-9">@Model.FechaCompletado.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                }

                <dt class="col-sm-3">Observaciones:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Observaciones) ? "Sin observaciones" : Model.Observaciones)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @if (Model.TipoMovimiento == "Salida" && Model.Cuidador == null)
        {
            <a asp-action="AsignarCuidador" asp-route-id="@Model.IdMovimiento" class="btn btn-warning">
                <i class="bi bi-person-plus"></i> Asignar Cuidador
            </a>
        }
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>