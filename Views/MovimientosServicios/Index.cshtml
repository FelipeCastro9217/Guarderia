<!-- Views/MovimientosServicios/Index.cshtml -->
@model IEnumerable<Guarderia.Models.MovimientoServicio>
@{
    ViewData["Title"] = "Movimientos de Servicios";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <p>
        <a asp-action="Crear" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Movimiento
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Fecha</th>
                    <th>Servicio</th>
                    <th>Mascota</th>
                    <th>Cliente</th>
                    <th>Tipo</th>
                    <th>Cantidad</th>
                    <th>Observaciones</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdMovimiento</td>
                        <td>@item.FechaMovimiento.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.Servicio?.NombreServicio</td>
                        <td>@item.Mascota?.Nombre</td>
                        <td>@item.Mascota?.Cliente?.Nombre @item.Mascota?.Cliente?.Apellido</td>
                        <td>
                            @if (item.TipoMovimiento == "Entrada")
                            {
                                <span class="badge bg-success">Entrada</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Salida</span>
                            }
                        </td>
                        <td>@item.Cantidad</td>
                        <td>@(string.IsNullOrEmpty(item.Observaciones) ? "-" : item.Observaciones)</td>
                        <td>
                            <a asp-action="Detalles" asp-route-id="@item.IdMovimiento" class="btn btn-sm btn-info" title="Ver Detalles">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Eliminar" asp-route-id="@item.IdMovimiento" class="btn btn-sm btn-danger" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>