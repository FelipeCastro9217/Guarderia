@model IEnumerable<Guarderia.Models.MovimientoServicio>
@{
    ViewData["Title"] = "Movimientos de Servicios";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <p>
        <a asp-action="Crear" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Movimiento
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Fecha</th>
                    <th>Servicio</th>
                    <th>Mascota/Cliente</th>
                    <th>Cuidador</th>
                    <th>Tipo</th>
                    <th>Cantidad</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdMovimiento</td>
                        <td>@item.FechaMovimiento.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.Servicio?.NombreServicio</td>
                        <td>
                            <strong>@item.Mascota?.Nombre</strong><br>
                            <small class="text-muted">@item.Mascota?.Cliente?.Nombre @item.Mascota?.Cliente?.Apellido</small>
                        </td>
                        <td>
                            @if (item.Cuidador != null)
                            {
                                <span class="badge bg-primary">
                                    <i class="bi bi-person-badge"></i> @item.Cuidador.Nombre @item.Cuidador.Apellido
                                </span>
                            }
                            else if (item.TipoMovimiento == "Salida")
                            {
                                <a asp-action="AsignarCuidador" asp-route-id="@item.IdMovimiento"
                                   class="btn btn-sm btn-outline-warning" title="Asignar Cuidador">
                                    <i class="bi bi-person-plus"></i> Asignar
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (item.TipoMovimiento == "Entrada")
                            {
                                <span class="badge bg-success">Entrada</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Salida</span>
                            }
                        </td>
                        <td>@item.Cantidad</td>
                        <td>
                            @switch (item.EstadoServicio)
                            {
                                case "Pendiente":
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-clock"></i> Pendiente
                                    </span>
                                    break;
                                case "En Proceso":
                                    <span class="badge bg-info">
                                        <i class="bi bi-hourglass-split"></i> En Proceso
                                    </span>
                                    break;
                                case "Completado":
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Completado
                                    </span>
                                    break;
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Detalles" asp-route-id="@item.IdMovimiento"
                                   class="btn btn-sm btn-info" title="Ver Detalles">
                                    <i class="bi bi-eye"></i>
                                </a>

                                @if (item.TipoMovimiento == "Salida" && item.EstadoServicio != "Completado")
                                {
                                    <button type="button" class="btn btn-sm btn-success btn-completar"
                                            data-id="@item.IdMovimiento" title="Marcar como Completado">
                                        <i class="bi bi-check-circle"></i>
                                    </button>
                                }

                                <a asp-action="Eliminar" asp-route-id="@item.IdMovimiento"
                                   class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.btn-completar').click(function() {
                var idMovimiento = $(this).data('id');
                var btn = $(this);

                if (confirm('¿Está seguro de marcar este servicio como completado?')) {
                    $.ajax({
                        url: '@Url.Action("CompletarServicio", "MovimientosServicios")',
                        type: 'POST',
                        data: { id: idMovimiento },
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function(response) {
                            if (response.success) {
                                alert(response.message);
                                location.reload();
                            } else {
                                alert('Error: ' + response.message);
                            }
                        },
                        error: function() {
                            alert('Error al comunicarse con el servidor');
                        }
                    });
                }
            });
        });
    </script>
}