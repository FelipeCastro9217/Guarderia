@model IEnumerable<Guarderia.Models.MovimientoServicio>
@{
    ViewData["Title"] = "Movimientos de Servicios";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Información del sistema -->
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <h6 class="alert-heading"><i class="bi bi-info-circle"></i> Gestión de Stock</h6>
        <small>
            <strong>Entrada:</strong> NO modifica stock al crearse. Al completar, genera Salida automática.<br>
            <strong>Salida:</strong> REDUCE stock al crearse. Solo se puede revertir eliminando el movimiento.
        </small>
    </div>

    <p>
        <a asp-action="Crear" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Movimiento
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Fecha</th>
                    <th>Servicio</th>
                    <th>Mascota/Cliente</th>
                    <th>Cuidador</th>
                    <th>Tipo</th>
                    <th>Cantidad</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdMovimiento</td>
                        <td>@item.FechaMovimiento.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <strong>@item.Servicio?.NombreServicio</strong><br>
                            <small class="text-muted">Stock actual: @item.Servicio?.StockDisponible</small>
                        </td>
                        <td>
                            <strong>@item.Mascota?.Nombre</strong><br>
                            <small class="text-muted">@item.Mascota?.Cliente?.Nombre @item.Mascota?.Cliente?.Apellido</small>
                        </td>
                        <td>
                            @if (item.Cuidador != null)
                            {
                                <span class="badge bg-primary">
                                    <i class="bi bi-person-badge"></i> @item.Cuidador.Nombre @item.Cuidador.Apellido
                                </span>
                            }
                            else if (item.TipoMovimiento == "Salida" || item.TipoMovimiento == "Entrada")
                            {
                                <a asp-action="AsignarCuidador" asp-route-id="@item.IdMovimiento"
                                   class="btn btn-sm btn-outline-warning" title="Asignar Cuidador">
                                    <i class="bi bi-person-plus"></i> Asignar
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (item.TipoMovimiento == "Entrada")
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-arrow-down-circle"></i> Entrada
                                </span>
                                <br>

                                <small class="text-muted">Sin efecto en stock</small>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-arrow-up-circle"></i> Salida
                                </span>
                                <br>

                                <small class="text-muted">Stock reducido</small>
                            }
                        </td>
                        <td>@item.Cantidad</td>
                        <td>
                            @switch (item.EstadoServicio)
                            {
                                case "Pendiente":
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-clock"></i> Pendiente
                                    </span>
                                    break;
                                case "En Proceso":
                                    <span class="badge bg-info">
                                        <i class="bi bi-hourglass-split"></i> En Proceso
                                    </span>
                                    @if (item.TipoMovimiento == "Entrada")
                                    {
                                        <br>
                        
                                        <small class="text-muted">Completar para generar salida</small>
                                    }
                                    break;
                                case "Completado":
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Completado
                                    </span>
                                    @if (item.FechaCompletado.HasValue)
                                    {
                                        <br>
                        
                                        <small class="text-muted">@item.FechaCompletado.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                    }
                                    break;
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Detalles" asp-route-id="@item.IdMovimiento"
                                   class="btn btn-sm btn-info" title="Ver Detalles">
                                    <i class="bi bi-eye"></i>
                                </a>

                                @if (item.EstadoServicio != "Completado")
                                {
                                    <button type="button" class="btn btn-sm btn-success btn-completar"
                                            data-id="@item.IdMovimiento"
                                            data-tipo="@item.TipoMovimiento"
                                            title="Marcar como Completado">
                                        <i class="bi bi-check-circle"></i>
                                    </button>
                                }

                                <a asp-action="Eliminar" asp-route-id="@item.IdMovimiento"
                                   class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-3" role="alert">
            <i class="bi bi-inbox"></i> No hay movimientos registrados en el sistema.
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.btn-completar').click(function() {
                var idMovimiento = $(this).data('id');
                var tipoMovimiento = $(this).data('tipo');
                var btn = $(this);

                var mensaje = '¿Está seguro de marcar este servicio como completado?';

                if (tipoMovimiento === 'Entrada') {
                    mensaje = '¿Está seguro de completar esta Entrada?\n\n' +
                             'Esto generará automáticamente una SALIDA y REDUCIRÁ el stock del inventario.';
                }

                if (confirm(mensaje)) {
                    // Mostrar indicador de carga
                    btn.prop('disabled', true).html('<i class="bi bi-hourglass-split"></i>');

                    $.ajax({
                        url: '@Url.Action("CompletarServicio", "MovimientosServicios")',
                        type: 'POST',
                        data: {
                            id: idMovimiento,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function(response) {
                            if (response.success) {
                                alert(response.message);
                                location.reload();
                            } else {
                                alert('Error: ' + response.message);
                                btn.prop('disabled', false).html('<i class="bi bi-check-circle"></i>');
                            }
                        },
                        error: function(xhr) {
                            alert('Error al comunicarse con el servidor: ' + xhr.statusText);
                            btn.prop('disabled', false).html('<i class="bi bi-check-circle"></i>');
                        }
                    });
                }
            });
        });
    </script>
}