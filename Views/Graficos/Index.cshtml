@{
}
@model IEnumerable<Guarderia.Models.InventarioServicio>
@{
    ViewData["Title"] = "Gráficos de Servicios";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <!-- Tabla de Servicios -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5><i class="bi bi-table"></i> Listado de Servicios</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Servicio</th>
                            <th>Cantidad en Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var servicio in Model)
                        {
                            <tr>
                                <td>@servicio.NombreServicio</td>
                                <td>@servicio.StockDisponible</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Gráfico de Servicios -->
    <div class="card">
        <div class="card-header bg-success text-white">
            <h5><i class="bi bi-bar-chart"></i> Gráfico de Stock de Servicios</h5>
        </div>
        <div class="card-body">
            <canvas id="grafica_servicios" width="400" height="200"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var grafico = document.getElementById('grafica_servicios').getContext('2d');
        var grafica_servicios = new Chart(grafico, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Select(p => p.NombreServicio))),
                datasets: [{
                    label: 'Cantidad en Stock',
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Select(p => p.StockDisponible))),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(153, 102, 255, 0.7)',
                        'rgba(255, 159, 64, 0.7)'
                    ],
                    borderColor: [
                        'rgb(255, 99, 132)',
                        'rgb(54, 162, 235)',
                        'rgb(255, 206, 86)',
                        'rgb(75, 192, 192)',
                        'rgb(153, 102, 255)',
                        'rgb(255, 159, 64)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Cantidad'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    },
                    title: {
                        display: true,
                        text: 'Stock Disponible por Servicio'
                    }
                }
            }
        });
    </script>
}

<style>
    #grafica_servicios {
        max-height: 400px;
    }
</style>