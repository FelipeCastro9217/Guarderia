@model Guarderia.Models.Usuario
@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container mt-4">
    <h2><i class="bi bi-person-circle"></i> @ViewData["Title"]</h2>
    <hr />

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <form asp-action="ActualizarPerfil" method="post">
                <input type="hidden" asp-for="IdUsuario" />
                <input type="hidden" asp-for="FechaRegistro" />
                <input type="hidden" asp-for="IdRol" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5><i class="bi bi-person"></i> Información Personal</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Nombres" class="form-label"></label>
                            <input asp-for="Nombres" class="form-control form-control-lg" />
                            <span asp-validation-for="Nombres" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label"></label>
                            <input asp-for="Correo" class="form-control form-control-lg" type="email" />
                            <small class="text-muted">Este correo se usa para iniciar sesión</small>
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle"></i>
                            <strong>Nota:</strong> Si cambias tu nombre, deberás cerrar sesión e iniciar nuevamente
                            para ver los cambios reflejados.
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-warning">
                        <h5><i class="bi bi-shield-lock"></i> Cambiar Contraseña</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Opcional:</strong> Deja este campo vacío si no deseas cambiar tu contraseña.
                        </div>

                        <div class="mb-3">
                            <label asp-for="Clave" class="form-label">Nueva Contraseña</label>
                            <input asp-for="Clave" type="password" class="form-control"
                                   placeholder="Dejar en blanco para no cambiar" />
                            <small class="text-muted">Mínimo 6 caracteres</small>
                            <span asp-validation-for="Clave" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">O puedes usar el formulario completo para cambiar tu contraseña:</p>
                            <a asp-action="CambiarClave" class="btn btn-outline-warning mt-2">
                                <i class="bi bi-key"></i> Cambiar Contraseña de Forma Segura
                            </a>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Volver al Inicio
                    </a>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card border-info mb-3">
                <div class="card-header bg-info text-white">
                    <h5><i class="bi bi-info-circle"></i> Información de Cuenta</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Usuario desde:</dt>
                        <dd class="col-sm-7">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-5">Rol:</dt>
                        <dd class="col-sm-7">
                            @if (Model.IdRol == 1)
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-shield-fill"></i> Administrador
                                </span>
                            }
                            else if (Model.IdRol == 2)
                            {
                                <span class="badge bg-info">
                                    <i class="bi bi-person-badge"></i> Empleado
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-5">ID Usuario:</dt>
                        <dd class="col-sm-7">#@Model.IdUsuario</dd>

                        <dt class="col-sm-5">Nombre:</dt>
                        <dd class="col-sm-7"><strong>@Model.Nombres</strong></dd>

                        <dt class="col-sm-5">Email:</dt>
                        <dd class="col-sm-7">
                            <small>@Model.Correo</small>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card border-success mb-3">
                <div class="card-header bg-success text-white">
                    <h5><i class="bi bi-check-circle"></i> Permisos</h5>
                </div>
                <div class="card-body">
                    @if (Model.IdRol == 1)
                    {
                        <ul class="list-unstyled mb-0">
                            <li><i class="bi bi-check text-success"></i> Acceso total al sistema</li>
                            <li><i class="bi bi-check text-success"></i> Gestionar usuarios</li>
                            <li><i class="bi bi-check text-success"></i> Generar reportes</li>
                            <li><i class="bi bi-check text-success"></i> Ver gráficos estadísticos</li>
                            <li><i class="bi bi-check text-success"></i> Gestionar cuidadores</li>
                            <li><i class="bi bi-check text-success"></i> Crear facturas</li>
                        </ul>
                    }
                    else
                    {
                        <ul class="list-unstyled mb-0">
                            <li><i class="bi bi-check text-success"></i> Gestionar clientes</li>
                            <li><i class="bi bi-check text-success"></i> Gestionar mascotas</li>
                            <li><i class="bi bi-check text-success"></i> Registrar servicios</li>
                            <li><i class="bi bi-check text-success"></i> Ver inventario</li>
                            <li><i class="bi bi-check text-success"></i> Gestionar movimientos</li>
                        </ul>
                    }
                </div>
            </div>

            <div class="card border-warning">
                <div class="card-header bg-warning">
                    <h5><i class="bi bi-shield-check"></i> Seguridad</h5>
                </div>
                <div class="card-body">
                    <h6><strong>Recomendaciones:</strong></h6>
                    <ul class="small mb-3">
                        <li>Usa una contraseña segura</li>
                        <li>No compartas tus credenciales</li>
                        <li>Cierra sesión al terminar</li>
                        <li>Mantén tu información actualizada</li>
                    </ul>

                    <div class="d-grid">
                        <a asp-action="CambiarClave" class="btn btn-warning">
                            <i class="bi bi-key"></i> Cambiar Contraseña
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}