@model IEnumerable<Guarderia.Models.Factura>
@{
    ViewData["Title"] = "Gestión de Facturas";
}

<div class="container mt-4">
    <h2><i class="bi bi-receipt-cutoff"></i> @ViewData["Title"]</h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (User.IsInRole("1"))
    {
        <p>
            <a asp-action="Crear" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Nueva Factura
            </a>
        </p>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> Solo puedes visualizar las facturas. La creación está restringida a Administradores.
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Número Factura</th>
                            <th>Fecha Emisión</th>
                            <th>Cliente</th>
                            <th>Mascota</th>
                            <th>Subtotal</th>
                            <th>IVA</th>
                            <th>Descuento</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var factura in Model)
                        {
                            <tr>
                                <td><strong>@factura.NumeroFactura</strong></td>
                                <td>@factura.FechaEmision.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@factura.Cliente?.Nombre @factura.Cliente?.Apellido</td>
                                <td>@factura.Mascota?.Nombre</td>
                                <td>$@factura.Subtotal.ToString("N2")</td>
                                <td>$@factura.Iva.ToString("N2")</td>
                                <td>$@factura.Descuento.ToString("N2")</td>
                                <td><strong>$@factura.Total.ToString("N2")</strong></td>
                                <td>
                                    @switch (factura.Estado)
                                    {
                                        case "Pagada":
                                            <span class="badge bg-success"><i class="bi bi-check-circle"></i> Pagada</span>
                                            break;
                                        case "Pendiente":
                                            <span class="badge bg-warning"><i class="bi bi-clock"></i> Pendiente</span>
                                            break;
                                        case "Anulada":
                                            <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Anulada</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <a asp-action="Detalles" asp-route-id="@factura.IdFactura"
                                       class="btn btn-sm btn-info" title="Ver Detalles">
                                        Detalles
                                    </a>
                                    @if (User.IsInRole("1") && factura.Estado != "Anulada")
                                    {
                                        <a asp-action="Anular" asp-route-id="@factura.IdFactura"
                                           class="btn btn-sm btn-danger" title="Anular Factura">
                                            Anular
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-3" role="alert">
            <i class="bi bi-inbox"></i> No hay facturas registradas en el sistema.
        </div>
    }
</div>