@{
}
@model Guarderia.Models.Mascota
@{
    ViewData["Title"] = "Registrar Nueva Mascota";
}

<div class="container mt-4">
    <h2><i class="bi bi-plus-circle"></i> @ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="RegistrarMascota" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="card mb-3">
                    <div class="card-header bg-success text-white">
                        <h5><i class="bi bi-heart-fill"></i> Información de tu Mascota</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label"></label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ej: Max, Luna" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Raza" class="form-label"></label>
                                <input asp-for="Raza" class="form-control" placeholder="Ej: Labrador, Beagle" />
                                <span asp-validation-for="Raza" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Edad" class="form-label"></label>
                                <input asp-for="Edad" class="form-control" type="number" min="0" max="25" />
                                <span asp-validation-for="Edad" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Peso" class="form-label"></label>
                                <input asp-for="Peso" class="form-control" type="number" step="0.01" min="0" />
                                <span asp-validation-for="Peso" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Sexo</label>
                                <select name="Sexo" class="form-select">
                                    <option value="">Opcional</option>
                                    <option value="Macho">Macho</option>
                                    <option value="Hembra">Hembra</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HistorialMedico" class="form-label"></label>
                            <textarea asp-for="HistorialMedico" class="form-control" rows="4"
                                      placeholder="Vacunas, alergias, enfermedades previas, medicamentos, etc."></textarea>
                            <small class="text-muted">
                                Esta información es importante para el cuidado de tu mascota
                            </small>
                            <span asp-validation-for="HistorialMedico" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle"></i> Registrar Mascota
                    </button>
                    <a asp-action="MisMascotas" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5><i class="bi bi-info-circle"></i> ¿Por qué registrar?</h5>
                </div>
                <div class="card-body">
                    <p>Al registrar tu mascota podrás:</p>
                    <ul>
                        <li>Agendar servicios online</li>
                        <li>Consultar el historial de atención</li>
                        <li>Recibir recordatorios</li>
                        <li>Acceder a promociones especiales</li>
                    </ul>

                    <hr>

                    <h6><strong>Información Importante:</strong></h6>
                    <p class="small mb-0">
                        El historial médico nos ayuda a brindar el mejor cuidado para tu mascota.
                        Incluye detalles sobre vacunas, alergias y condiciones especiales.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}