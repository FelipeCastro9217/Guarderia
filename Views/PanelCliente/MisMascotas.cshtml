@{
}
@model IEnumerable<Guarderia.Models.Mascota>
@{
    ViewData["Title"] = "Mis Mascotas";
}

<div class="container mt-4">
    <h2><i class="bi bi-heart-fill"></i> @ViewData["Title"]</h2>
    <hr />

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <p>
        <a asp-action="RegistrarMascota" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Registrar Nueva Mascota
        </a>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Dashboard
        </a>
    </p>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var mascota in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card border-success h-100">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="bi bi-heart"></i> @mascota.Nombre</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Raza:</dt>
                                <dd class="col-sm-8">@mascota.Raza</dd>

                                <dt class="col-sm-4">Edad:</dt>
                                <dd class="col-sm-8">@mascota.Edad años</dd>

                                <dt class="col-sm-4">Peso:</dt>
                                <dd class="col-sm-8">@mascota.Peso kg</dd>

                                @if (!string.IsNullOrEmpty(mascota.HistorialMedico))
                                {
                                    <dt class="col-sm-12 mt-2">Historial:</dt>
                                    <dd class="col-sm-12">
                                        <small class="text-muted">@mascota.HistorialMedico</small>
                                    </dd>
                                }
                            </dl>
                        </div>
                        <div class="card-footer">
                            <a asp-action="EditarMascota" asp-route-id="@mascota.IdMascota"
                               class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="AgendarServicio" class="btn btn-sm btn-primary">
                                <i class="bi bi-calendar-plus"></i> Agendar Servicio
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <h4 class="mt-3">No tienes mascotas registradas</h4>
            <p>Registra tu primera mascota para empezar a usar nuestros servicios</p>
            <a asp-action="RegistrarMascota" class="btn btn-success btn-lg mt-2">
                <i class="bi bi-plus-circle"></i> Registrar Mi Primera Mascota
            </a>
        </div>
    }
</div>