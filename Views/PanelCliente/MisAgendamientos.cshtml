@model IEnumerable<Guarderia.Models.Agendamiento>
@{
    ViewData["Title"] = "Mis Agendamientos";
}

<div class="container mt-4">
    <h2><i class="bi bi-calendar-check"></i> @ViewData["Title"]</h2>
    <hr />

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <p>
        <a asp-action="AgendarServicio" class="btn btn-success">
            <i class="bi bi-calendar-plus"></i> Nuevo Agendamiento
        </a>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Dashboard
        </a>
    </p>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha Solicitud</th>
                        <th>Mascota</th>
                        <th>Servicio</th>
                        <th>Fecha Deseada</th>
                        <th>Hora</th>
                        <th>Cantidad</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var agendamiento in Model)
                    {
                        <tr>
                            <td>@agendamiento.FechaSolicitud.ToString("dd/MM/yyyy")</td>
                            <td><strong>@agendamiento.Mascota?.Nombre</strong></td>
                            <td>@agendamiento.Servicio?.NombreServicio</td>
                            <td>@agendamiento.FechaSolicitada.ToString("dd/MM/yyyy")</td>
                            <td>@agendamiento.HoraSolicitada</td>
                            <td>@agendamiento.Cantidad</td>
                            <td>
                                @switch (agendamiento.Estado)
                                {
                                    case "Pendiente":
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock"></i> Pendiente
                                        </span>
                                        break;
                                    case "Confirmado":
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Confirmado
                                        </span>
                                        break;
                                    case "Completado":
                                        <span class="badge bg-primary">
                                            <i class="bi bi-check-all"></i> Completado
                                        </span>
                                        break;
                                    case "Cancelado":
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Cancelado
                                        </span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (agendamiento.Estado == "Pendiente" || agendamiento.Estado == "Confirmado")
                                {
                                    <form asp-action="CancelarAgendamiento" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@agendamiento.IdAgendamiento" />
                                        <button type="submit" class="btn btn-sm btn-danger"
                                                onclick="return confirm('¿Estás seguro de cancelar este agendamiento?')">
                                            <i class="bi bi-x-circle"></i> Cancelar
                                        </button>
                                    </form>
                                }
                                @if (!string.IsNullOrEmpty(agendamiento.NotasAdmin))
                                {
                                    <button type="button" class="btn btn-sm btn-info"
                                            data-bs-toggle="tooltip"
                                            title="@agendamiento.NotasAdmin">
                                        <i class="bi bi-info-circle"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                        @if (!string.IsNullOrEmpty(agendamiento.Observaciones))
                        {
                            <tr class="table-light">
                                <td colspan="8">
                                    <small><strong>Observaciones:</strong> @agendamiento.Observaciones</small>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-calendar-x" style="font-size: 3rem;"></i>
            <h4 class="mt-3">No tienes agendamientos</h4>
            <p>Agenda un servicio para tu mascota</p>
            <a asp-action="AgendarServicio" class="btn btn-success btn-lg mt-2">
                <i class="bi bi-calendar-plus"></i> Agendar Servicio
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}