@model Guarderia.Models.Mascota
@{
    ViewData["Title"] = "Editar Mascota";
}

<div class="container mt-4">
    <h2><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="EditarMascota" method="post">
                <input type="hidden" asp-for="IdMascota" />
                <input type="hidden" asp-for="IdCliente" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="card mb-3">
                    <div class="card-header bg-warning">
                        <h5><i class="bi bi-heart-fill"></i> Información de @Model.Nombre</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label"></label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Raza" class="form-label"></label>
                                <input asp-for="Raza" class="form-control" />
                                <span asp-validation-for="Raza" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Edad" class="form-label"></label>
                                <input asp-for="Edad" class="form-control" type="number" min="0" max="25" />
                                <span asp-validation-for="Edad" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Peso" class="form-label"></label>
                                <input asp-for="Peso" class="form-control" type="number" step="0.01" min="0" />
                                <span asp-validation-for="Peso" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Sexo</label>
                                <select name="Sexo" class="form-select">
                                    <option value="">Opcional</option>
                                    <option value="Macho">Macho</option>
                                    <option value="Hembra">Hembra</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HistorialMedico" class="form-label"></label>
                            <textarea asp-for="HistorialMedico" class="form-control" rows="4"
                                      placeholder="Vacunas, alergias, enfermedades previas, medicamentos, etc."></textarea>
                            <small class="text-muted">
                                Esta información es importante para el cuidado de tu mascota
                            </small>
                            <span asp-validation-for="HistorialMedico" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <strong>Importante:</strong> Mantén actualizada la información de tu mascota para un mejor servicio.
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-warning btn-lg">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="MisMascotas" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5><i class="bi bi-clipboard-heart"></i> Información Actual</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Mascota:</dt>
                        <dd class="col-sm-7"><strong>@Model.Nombre</strong></dd>

                        <dt class="col-sm-5">Raza:</dt>
                        <dd class="col-sm-7">@Model.Raza</dd>

                        <dt class="col-sm-5">Edad:</dt>
                        <dd class="col-sm-7">@Model.Edad años</dd>

                        <dt class="col-sm-5">Peso:</dt>
                        <dd class="col-sm-7">@Model.Peso kg</dd>
                    </dl>

                    <hr>

                    <h6><strong>Servicios Disponibles:</strong></h6>
                    <div class="d-grid gap-2">
                        <a asp-action="AgendarServicio" class="btn btn-sm btn-success">
                            <i class="bi bi-calendar-plus"></i> Agendar Servicio
                        </a>
                        <a asp-action="HistorialServicios" class="btn btn-sm btn-info">
                            <i class="bi bi-clock-history"></i> Ver Historial
                        </a>
                    </div>
                </div>
            </div>

            <div class="card border-warning mt-3">
                <div class="card-header bg-warning">
                    <h5><i class="bi bi-exclamation-triangle"></i> Importante</h5>
                </div>
                <div class="card-body">
                    <p class="small mb-0">
                        Si tu mascota tiene alguna condición médica especial, alergia o requiere
                        medicación, por favor actualiza esta información en el historial médico.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}