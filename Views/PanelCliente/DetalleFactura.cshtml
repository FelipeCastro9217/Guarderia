@model Guarderia.Models.Factura
@{
    ViewData["Title"] = "Detalle de Factura";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="bi bi-receipt"></i> @ViewData["Title"]</h2>
            <hr />
        </div>
    </div>

    <!-- Encabezado de Factura -->
    <div class="card mb-3 border-primary">
        <div class="card-header bg-primary text-white">
            <div class="row">
                <div class="col-md-6">
                    <h4><i class="bi bi-house-heart"></i> Guardería El Amigo</h4>
                    <p class="mb-0">Sistema de Gestión</p>
                </div>
                <div class="col-md-6 text-end">
                    <h3>FACTURA</h3>
                    <h5>@Model.NumeroFactura</h5>
                    <p class="mb-0">Fecha: @Model.FechaEmision.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary"><i class="bi bi-heart"></i> Información de la Mascota</h5>
                    <table class="table table-borderless table-sm">
                        <tr>
                            <td><strong>Mascota:</strong></td>
                            <td>@Model.Mascota?.Nombre</td>
                        </tr>
                        <tr>
                            <td><strong>Raza:</strong></td>
                            <td>@Model.Mascota?.Raza</td>
                        </tr>
                        <tr>
                            <td><strong>Edad:</strong></td>
                            <td>@Model.Mascota?.Edad años</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <h5 class="text-success"><i class="bi bi-info-circle"></i> Estado de la Factura</h5>
                    <table class="table table-borderless table-sm">
                        <tr>
                            <td><strong>Estado:</strong></td>
                            <td>
                                @switch (Model.Estado)
                                {
                                    case "Pagada":
                                        <span class="badge bg-success">Pagada</span>
                                        break;
                                    case "Pendiente":
                                        <span class="badge bg-warning">Pendiente</span>
                                        break;
                                    case "Anulada":
                                        <span class="badge bg-danger">Anulada</span>
                                        break;
                                }
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Fecha Emisión:</strong></td>
                            <td>@Model.FechaEmision.ToString("dd/MM/yyyy")</td>
                        </tr>
                    </table>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Observaciones))
            {
                <div class="alert alert-info mt-2" role="alert">
                    <strong><i class="bi bi-info-circle"></i> Observaciones:</strong> @Model.Observaciones
                </div>
            }
        </div>
    </div>

    <!-- Detalle de Servicios -->
    <div class="card mb-3">
        <div class="card-header bg-info text-white">
            <h5><i class="bi bi-list-check"></i> Detalle de Servicios</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Servicio</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-end">Precio Unitario</th>
                            <th class="text-end">Descuento Item</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.DetallesFactura != null)
                        {
                            @foreach (var detalle in Model.DetallesFactura)
                            {
                                <tr>
                                    <td>
                                        <strong>@detalle.Servicio?.NombreServicio</strong><br>
                                        <small class="text-muted">@detalle.Servicio?.Descripcion</small>
                                    </td>
                                    <td class="text-center">@detalle.Cantidad</td>
                                    <td class="text-end">$@detalle.PrecioUnitario.ToString("N2")</td>
                                    <td class="text-end text-danger">
                                        @if (detalle.DescuentoItem > 0)
                                        {
                                            <span>-$@detalle.DescuentoItem.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td class="text-end"><strong>$@detalle.Subtotal.ToString("N2")</strong></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Resumen de Totales -->
    <div class="row">
        <div class="col-md-6 offset-md-6">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h5><i class="bi bi-calculator"></i> Resumen de Factura</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tr>
                            <td class="text-end"><strong>Subtotal:</strong></td>
                            <td class="text-end">$@Model.Subtotal.ToString("N2")</td>
                        </tr>
                        @if (Model.Descuento > 0)
                        {
                            <tr>
                                <td class="text-end"><strong>Descuento Total:</strong></td>
                                <td class="text-end text-danger">-$@Model.Descuento.ToString("N2")</td>
                            </tr>
                        }
                        <tr>
                            <td class="text-end"><strong>IVA (19%):</strong></td>
                            <td class="text-end">$@Model.Iva.ToString("N2")</td>
                        </tr>
                        <tr class="table-success">
                            <td class="text-end"><h4><strong>TOTAL:</strong></h4></td>
                            <td class="text-end"><h4><strong>$@Model.Total.ToString("N2")</strong></h4></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Botones de Acción -->
    <div class="mt-4 mb-5">
        <a asp-action="MisFacturas" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Volver a Mis Facturas
        </a>
        <button onclick="window.print()" class="btn btn-primary btn-lg">
            <i class="bi bi-printer"></i> Imprimir Factura
        </button>
        <a asp-action="Dashboard" class="btn btn-info btn-lg">
            <i class="bi bi-speedometer2"></i> Ir al Dashboard
        </a>
    </div>
</div>

<style>
    @@media print {
        .btn, .navbar, footer, .mt-4.mb-5 {
            display: none !important;
        }

        body {
            background: white !important;
        }

        .card {
            border: 1px solid #000 !important;
            box-shadow: none !important;
        }
    }
</style>