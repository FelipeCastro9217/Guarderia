@model IEnumerable<Guarderia.Models.Factura>
@{
    ViewData["Title"] = "Mis Facturas";
}

<div class="container mt-4">
    <h2><i class="bi bi-receipt-cutoff"></i> @ViewData["Title"]</h2>
    <hr />

    <p>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Dashboard
        </a>
    </p>

    @if (Model.Any())
    {
        <div class="row mb-3">
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h6>Total Facturas</h6>
                        <h3>@Model.Count()</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h6>Total Pagado</h6>
                        <h3>$@Model.Where(f => f.Estado == "Pagada").Sum(f => f.Total).ToString("N0")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-warning text-dark">
                    <div class="card-body text-center">
                        <h6>Facturas Pendientes</h6>
                        <h3>@Model.Count(f => f.Estado == "Pendiente")</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Número</th>
                        <th>Fecha</th>
                        <th>Mascota</th>
                        <th>Servicios</th>
                        <th>Subtotal</th>
                        <th>IVA</th>
                        <th>Descuento</th>
                        <th>Total</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var factura in Model)
                    {
                        <tr>
                            <td><strong>@factura.NumeroFactura</strong></td>
                            <td>@factura.FechaEmision.ToString("dd/MM/yyyy")</td>
                            <td>@factura.Mascota?.Nombre</td>
                            <td>
                                <small>
                                    @if (factura.DetallesFactura != null && factura.DetallesFactura.Any())
                                    {
                                        @string.Join(", ", factura.DetallesFactura.Select(d => d.Servicio?.NombreServicio))
                                    }
                                </small>
                            </td>
                            <td>$@factura.Subtotal.ToString("N2")</td>
                            <td>$@factura.Iva.ToString("N2")</td>
                            <td>
                                @if (factura.Descuento > 0)
                                {
                                    <span class="text-success">-$@factura.Descuento.ToString("N2")</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td><strong>$@factura.Total.ToString("N2")</strong></td>
                            <td>
                                @switch (factura.Estado)
                                {
                                    case "Pagada":
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Pagada
                                        </span>
                                        break;
                                    case "Pendiente":
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock"></i> Pendiente
                                        </span>
                                        break;
                                    case "Anulada":
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Anulada
                                        </span>
                                        break;
                                }
                            </td>
                            <td>
                                <a asp-action="DetalleFactura" asp-route-id="@factura.IdFactura"
                                   class="btn btn-sm btn-info" title="Ver Detalle">
                                    <i class="bi bi-eye"></i> Ver
                                </a>
                                <button type="button" class="btn btn-sm btn-secondary"
                                        onclick="imprimirFactura(@factura.IdFactura)"
                                        title="Imprimir">
                                    <i class="bi bi-printer"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-light">
                        <td colspan="7" class="text-end"><strong>TOTAL GENERAL:</strong></td>
                        <td colspan="3"><strong>$@Model.Sum(f => f.Total).ToString("N2")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="alert alert-info mt-3" role="alert">
            <i class="bi bi-info-circle"></i>
            <strong>Información:</strong> Puedes descargar o imprimir cada factura usando el botón
            <i class="bi bi-printer"></i> correspondiente.
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-receipt" style="font-size: 3rem;"></i>
            <h4 class="mt-3">No tienes facturas</h4>
            <p>Las facturas de tus servicios aparecerán aquí una vez sean generadas por el personal</p>
            <a asp-action="AgendarServicio" class="btn btn-success btn-lg mt-2">
                <i class="bi bi-calendar-plus"></i> Agendar un Servicio
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        function imprimirFactura(idFactura) {
            // Abrir la factura en una nueva ventana para imprimir
            var url = '@Url.Action("DetalleFactura", "PanelCliente")/' + idFactura;
            var ventana = window.open(url, '_blank');
            ventana.onload = function() {
                setTimeout(function() {
                    ventana.print();
                }, 500);
            };
        }
    </script>
}