<!-- Views/Clientes/Eliminar.cshtml -->
@model Guarderia.Models.Cliente
@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container mt-4">
    <h2 class="text-danger">@ViewData["Title"]</h2>
    <hr />

    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">¿Está seguro que desea eliminar este cliente?</h4>
        <p>Esta acción no se puede deshacer.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre Completo:</dt>
                <dd class="col-sm-9">@Model.Nombre @Model.Apellido</dd>

                <dt class="col-sm-3">Teléfono:</dt>
                <dd class="col-sm-9">@Model.Telefono</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Dirección:</dt>
                <dd class="col-sm-9">@Model.Direccion</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Eliminar" method="post" class="mt-3">
        <input type="hidden" asp-for="IdCliente" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirmar Eliminación
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancelar
        </a>
    </form>
</div>