<!-- Views/Clientes/Detalles.cshtml -->
@model Guarderia.Models.Cliente
@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID Cliente:</dt>
                <dd class="col-sm-9">@Model.IdCliente</dd>

                <dt class="col-sm-3">Nombre Completo:</dt>
                <dd class="col-sm-9">@Model.Nombre @Model.Apellido</dd>

                <dt class="col-sm-3">Teléfono:</dt>
                <dd class="col-sm-9">@Model.Telefono</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Dirección:</dt>
                <dd class="col-sm-9">@Model.Direccion</dd>

                <dt class="col-sm-3">Fecha de Registro:</dt>
                <dd class="col-sm-9">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Editar" asp-route-id="@Model.IdCliente" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>