<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Guardería El Amigo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .nav-link:hover {
            background-color: rgba(0,0,0,0.1);
            border-radius: 5px;
        }

        .user-info {
            font-weight: bold;
            color: #ffc107;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-heart"></i> Guardería El Amigo
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door"></i> Inicio
                                </a>
                            </li>

                            <!-- Menú CRUD -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarCrud" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-folder"></i> Gestión
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarCrud">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Clientes" asp-action="Index">
                                            <i class="bi bi-people"></i> Clientes
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Mascotas" asp-action="Index">
                                            <i class="bi bi-heart"></i> Mascotas
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="InventarioServicios" asp-action="Index">
                                            <i class="bi bi-box-seam"></i> Inventario Servicios
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="MovimientosServicios" asp-action="Index">
                                            <i class="bi bi-arrow-left-right"></i> Movimiento Servicios
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <!-- Menú Operaciones -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarOperaciones" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-cart-check"></i> Operaciones
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarOperaciones">
                                    <li>
                                        <a class="dropdown-item" asp-controller="VentasServicios" asp-action="Index">
                                            <i class="bi bi-bag-check"></i> Ventas Servicios
                                        </a>
                                    </li>
                                    @if (User.IsInRole("1"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="VentasServicios" asp-action="Crear">
                                                <i class="bi bi-plus-circle"></i> Nueva Venta
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Facturas" asp-action="Index">
                                            <i class="bi bi-receipt-cutoff"></i> Facturas
                                        </a>
                                    </li>
                                    @if (User.IsInRole("1"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Facturas" asp-action="Crear">
                                                <i class="bi bi-receipt"></i> Nueva Factura
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>

                            <!-- Menú Reportes -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarReportes" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-graph-up"></i> Reportes
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarReportes">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reportes" asp-action="Index">
                                            <i class="bi bi-file-earmark-text"></i> Informes
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Graficos" asp-action="Index">
                                            <i class="bi bi-bar-chart"></i> Gráficos
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <span class="navbar-text user-info me-3">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                    @if (User.IsInRole("1"))
                                    {
                                        <span class="badge bg-warning text-dark">Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">Empleado</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-light" asp-controller="Acceso" asp-action="Salir">
                                    <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            &copy; 2025 - Guardería Canina "El Amigo" - Sistema de Gestión Integral
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>