@{
}
@model Guarderia.Models.Cuidador
@{
    ViewData["Title"] = "Detalles del Cuidador";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID Cuidador:</dt>
                <dd class="col-sm-9">@Model.IdCuidador</dd>

                <dt class="col-sm-3">Nombre Completo:</dt>
                <dd class="col-sm-9">@Model.Nombre @Model.Apellido</dd>

                <dt class="col-sm-3">Teléfono:</dt>
                <dd class="col-sm-9">@Model.Telefono</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Especialidad:</dt>
                <dd class="col-sm-9">@(Model.Especialidad ?? "No especificada")</dd>

                <dt class="col-sm-3">Fecha de Contratación:</dt>
                <dd class="col-sm-9">@Model.FechaContratacion.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Estado:</dt>
                <dd class="col-sm-9">
                    @if (Model.Activo)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Editar" asp-route-id="@Model.IdCuidador" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>