@{
}
@model IEnumerable<Guarderia.Models.Cuidador>
@{
    ViewData["Title"] = "Gestión de Cuidadores";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <p>
        <a asp-action="Crear" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Cuidador
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre Completo</th>
                    <th>Teléfono</th>
                    <th>Email</th>
                    <th>Especialidad</th>
                    <th>Fecha Contratación</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdCuidador</td>
                        <td>@item.Nombre @item.Apellido</td>
                        <td>@item.Telefono</td>
                        <td>@item.Email</td>
                        <td>@(item.Especialidad ?? "N/A")</td>
                        <td>@item.FechaContratacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Detalles" asp-route-id="@item.IdCuidador" class="btn btn-sm btn-info" title="Ver Detalles">
                                Detalles
                            </a>
                            <a asp-action="Editar" asp-route-id="@item.IdCuidador" class="btn btn-sm btn-warning" title="Editar">
                                Editar
                            </a>
                            <a asp-action="Eliminar" asp-route-id="@item.IdCuidador" class="btn btn-sm btn-danger" title="Eliminar">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>