<!-- Views/InventarioServicios/Eliminar.cshtml -->
@model Guarderia.Models.InventarioServicio
@{
    ViewData["Title"] = "Eliminar Servicio";
}

<div class="container mt-4">
    <h2 class="text-danger">@ViewData["Title"]</h2>
    <hr />

    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">¿Está seguro que desea eliminar este servicio?</h4>
        <p>Esta acción no se puede deshacer.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Model.NombreServicio</dd>

                <dt class="col-sm-3">Categoría:</dt>
                <dd class="col-sm-9">@Model.Categoria</dd>

                <dt class="col-sm-3">Precio:</dt>
                <dd class="col-sm-9">$@Model.PrecioUnitario.ToString("N2")</dd>

                <dt class="col-sm-3">Stock:</dt>
                <dd class="col-sm-9">@Model.StockDisponible</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Eliminar" method="post" class="mt-3">
        <input type="hidden" asp-for="IdServicio" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirmar Eliminación
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancelar
        </a>
    </form>
</div>