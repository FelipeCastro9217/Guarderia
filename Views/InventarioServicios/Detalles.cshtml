<!-- Views/InventarioServicios/Detalles.cshtml -->
@model Guarderia.Models.InventarioServicio
@{
    ViewData["Title"] = "Detalles del Servicio";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID Servicio:</dt>
                <dd class="col-sm-9">@Model.IdServicio</dd>

                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Model.NombreServicio</dd>

                <dt class="col-sm-3">Descripción:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Descripcion) ? "Sin descripción" : Model.Descripcion)</dd>

                <dt class="col-sm-3">Categoría:</dt>
                <dd class="col-sm-9"><span class="badge bg-info">@Model.Categoria</span></dd>

                <dt class="col-sm-3">Precio Unitario:</dt>
                <dd class="col-sm-9">$@Model.PrecioUnitario.ToString("N2")</dd>

                <dt class="col-sm-3">Stock Disponible:</dt>
                <dd class="col-sm-9">
                    @Model.StockDisponible unidades
                    @if (Model.StockDisponible > 10)
                    {
                        <span class="badge bg-success">Disponible</span>
                    }
                    else if (Model.StockDisponible > 0)
                    {
                        <span class="badge bg-warning">Poco Stock</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Agotado</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Editar" asp-route-id="@Model.IdServicio" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>
