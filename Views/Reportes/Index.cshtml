<!-- Views/Reportes/Index.cshtml -->
@{
    ViewData["Title"] = "Informes por Parámetros";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5><i class="bi bi-file-earmark-text"></i> Seleccione el Tipo de Informe</h5>
        </div>
        <div class="card-body">
            <form asp-action="GenerarReporte" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Tipo de Reporte</label>
                        <select name="tipoReporte" class="form-select" required>
                            <option value="">-- Seleccione --</option>
                            <option value="ventas">Reporte de Ventas</option>
                            <option value="servicios">Reporte de Servicios</option>
                            <option value="clientes">Reporte de Clientes</option>
                            <option value="movimientos">Reporte de Movimientos</option>
                        </select>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Fecha Inicio</label>
                        <input type="date" name="fechaInicio" class="form-control" />
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Fecha Fin</label>
                        <input type="date" name="fechaFin" class="form-control" />
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-file-earmark-bar-graph"></i> Generar Reporte
                </button>
            </form>
        </div>
    </div>

    <div class="alert alert-info mt-3" role="alert">
        <i class="bi bi-info-circle"></i>
        <strong>Nota:</strong> Las fechas son opcionales. Si no se especifican, se mostrarán todos los registros.
    </div>
</div>