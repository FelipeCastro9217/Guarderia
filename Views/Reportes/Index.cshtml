@{
}
@model IEnumerable<Guarderia.Models.Cliente>
@{
    ViewData["Title"] = "Reportes en PDF";
}

<div class="container mt-4">
    <h2><i class="bi bi-file-earmark-pdf"></i> @ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <!-- Reporte de Clientes -->
        <div class="col-md-4 mb-4">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5><i class="bi bi-people"></i> Reporte de Clientes</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Genera un reporte en PDF con el listado completo de todos los clientes registrados en el sistema.</p>
                    <div class="d-grid gap-2">
                        <a asp-action="MostrarPdfClientes" class="btn btn-primary" target="_blank">
                            <i class="bi bi-file-earmark-pdf"></i> Ver PDF
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reporte de Servicios -->
        <div class="col-md-4 mb-4">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h5><i class="bi bi-box-seam"></i> Reporte de Servicios</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Genera un reporte en PDF con el inventario completo de servicios disponibles.</p>
                    <div class="d-grid gap-2">
                        <a asp-action="MostrarPdfServicios" class="btn btn-success" target="_blank">
                            <i class="bi bi-file-earmark-pdf"></i> Ver PDF
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reporte de Ventas -->
        <div class="col-md-4 mb-4">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5><i class="bi bi-cart-check"></i> Reporte de Ventas</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Genera un reporte en PDF con el historial de ventas de servicios realizadas.</p>
                    <div class="d-grid gap-2">
                        <a asp-action="MostrarPdfVentas" class="btn btn-info" target="_blank">
                            <i class="bi bi-file-earmark-pdf"></i> Ver PDF
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="alert alert-info mt-3" role="alert">
        <i class="bi bi-info-circle"></i>
        <strong>Nota:</strong> Los reportes se generarán en formato PDF y se abrirán en una nueva pestaña del navegador.
    </div>

    <!-- Tabla de vista previa de Clientes -->
    <div class="card mt-4">
        <div class="card-header bg-secondary text-white">
            <h5><i class="bi bi-eye"></i> Vista Previa - Listado de Clientes</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Teléfono</th>
                            <th>Email</th>
                            <th>Dirección</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cliente in Model)
                        {
                            <tr>
                                <td>@cliente.IdCliente</td>
                                <td>@cliente.Nombre @cliente.Apellido</td>
                                <td>@cliente.Telefono</td>
                                <td>@cliente.Email</td>
                                <td>@cliente.Direccion</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>