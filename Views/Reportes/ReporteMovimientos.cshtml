<!-- Views/Reportes/ReporteMovimientos.cshtml -->
@model IEnumerable<Guarderia.Models.MovimientoServicio>
@{
    ViewData["Title"] = "Reporte de Movimientos";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Fecha</th>
                            <th>Servicio</th>
                            <th>Mascota</th>
                            <th>Cliente</th>
                            <th>Tipo</th>
                            <th>Cantidad</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var movimiento in Model)
                        {
                            <tr>
                                <td>@movimiento.IdMovimiento</td>
                                <td>@movimiento.FechaMovimiento.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@movimiento.Servicio?.NombreServicio</td>
                                <td>@movimiento.Mascota?.Nombre</td>
                                <td>@movimiento.Mascota?.Cliente?.Nombre @movimiento.Mascota?.Cliente?.Apellido</td>
                                <td>
                                    @if (movimiento.TipoMovimiento == "Entrada")
                                    {
                                        <span class="badge bg-success">Entrada</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Salida</span>
                                    }
                                </td>
                                <td>@movimiento.Cantidad</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
        <button onclick="window.print()" class="btn btn-primary">
            <i class="bi bi-printer"></i> Imprimir
        </button>
    </div>
</div>