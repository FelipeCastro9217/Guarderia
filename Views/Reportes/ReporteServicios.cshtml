<!-- Views/Reportes/ReporteServicios.cshtml -->
@model IEnumerable<Guarderia.Models.InventarioServicio>
@{
    ViewData["Title"] = "Reporte de Servicios";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Servicio</th>
                            <th>Categoría</th>
                            <th>Precio</th>
                            <th>Stock</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var servicio in Model)
                        {
                            <tr>
                                <td>@servicio.IdServicio</td>
                                <td>@servicio.NombreServicio</td>
                                <td><span class="badge bg-info">@servicio.Categoria</span></td>
                                <td>$@servicio.PrecioUnitario.ToString("N2")</td>
                                <td>@servicio.StockDisponible</td>
                                <td>
                                    @if (servicio.StockDisponible > 10)
                                    {
                                        <span class="badge bg-success">Disponible</span>
                                    }
                                    else if (servicio.StockDisponible > 0)
                                    {
                                        <span class="badge bg-warning">Poco Stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Agotado</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
        <button onclick="window.print()" class="btn btn-primary">
            <i class="bi bi-printer"></i> Imprimir
        </button>
    </div>
</div>