<!-- Views/Mascotas/Crear.cshtml -->
@model Guarderia.Models.Mascota
@{
    ViewData["Title"] = "Registrar Mascota";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Crear" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="IdCliente" class="form-label">Propietario</label>
                    <select asp-for="IdCliente" class="form-select" asp-items="ViewBag.Clientes">
                        <option value="">-- Seleccione un cliente --</option>
                    </select>
                    <span asp-validation-for="IdCliente" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Nombre de la mascota" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Raza" class="form-label"></label>
                        <input asp-for="Raza" class="form-control" placeholder="Ej: Labrador, Pastor Alemán" />
                        <span asp-validation-for="Raza" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Edad" class="form-label"></label>
                        <input asp-for="Edad" class="form-control" type="number" min="0" max="25" />
                        <span asp-validation-for="Edad" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Peso" class="form-label"></label>
                        <input asp-for="Peso" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="Peso" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="HistorialMedico" class="form-label"></label>
                    <textarea asp-for="HistorialMedico" class="form-control" rows="4"
                              placeholder="Vacunas, enfermedades previas, alergias, etc."></textarea>
                    <span asp-validation-for="HistorialMedico" class="text-danger"></span>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}